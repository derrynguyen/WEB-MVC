@model List<BANQUANAO.Models.Products>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Main.cshtml";
}

<div class="container " style="height:100vh;margin-top:20vh; margin-bottom:20vh">
    <div class="row">
        <div class="col-sm-2 text-start">
            <h3 style="font-family:fontThanhHai; font-size:18px;color:gray;margin-left:20px">Thương hiệu</h3>
            <div class="nav-item dropdown mt-3" style="font-family:fontThanhHai; font-size:16px;margin-left:20px">
                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Chọn lọc
                </a>
                <ul class="dropdown-menu" style="border-radius:0;">
                    @foreach (var brand in ViewBag.Brand)
                    {
                        <li><a class="dropdown-item" href="/Products/index?SortColumn=@brand.nameBrand">@brand.nameBrand</a></li>

                    }
                </ul>
            </div>
            <h3 style="font-family:fontThanhHai; font-size:18px;color:gray;margin-left:20px;margin-top:50px">Danh mục sản phẩm</h3>
            <div class="nav-item dropdown mt-3" style="font-family:fontThanhHai; font-size:16px;margin-left:20px">
                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Chọn lọc
                </a>
                <ul class="dropdown-menu" style="border-radius:0;">
                    <li><a class="dropdown-item" href="/Products/index?SortColumn=AOPOLO">Áo Polo</a></li>
                    <li><a class="dropdown-item" href="/Products/index?SortColumn=AOSOMI">Áo Sơ mi</a></li>
                    <li><a class="dropdown-item" href="/Products/index?SortColumn=AONI">Áo Nỉ</a></li>
                    <li><a class="dropdown-item" href="/Products/index?SortColumn=QUAN">Quần - Dép</a></li>
                    <li><a class="dropdown-item" href="/Products/index?SortColumn=GIAY">Giày</a></li>
                    <li><a class="dropdown-item" href="/Products/index?SortColumn=BALO">Balo</a></li>
                    <li><a class="dropdown-item" href="/Products/index?SortColumn=AOPHONG">Áo Phông</a></li>
                    <li><a class="dropdown-item" href="/Products/index?SortColumn=AOLEN">Áo Len</a></li>
                    <li><a class="dropdown-item" href="/Products/index?SortColumn=AOKHOAC">Áo Khoác</a></li>
                    <li><a class="dropdown-item" href="/Products/index?SortColumn=QUANSHORT">Quần Short</a></li>
                    <li><a class="dropdown-item" href="/Products/index?SortColumn=TUIVI">Túi - Ví</a></li>
                    <li><a class="dropdown-item" href="/Products/index?SortColumn=VALIKEO">Vali Kéo</a></li>
                    <li><a class="dropdown-item" href="/Products/index?SortColumn=PHUKIEN">Phụ Kiện</a></li>
                    <li><a class="dropdown-item" href="/Products/index?SortColumn=VAY">Váy</a></li>


                </ul>
            </div>
            <h3 style="font-family:fontThanhHai; font-size:18px;color:gray;margin-left:20px;margin-top:50px">Lọc giá cả</h3>
            <div class="nav-item dropdown mt-3" style="font-family:fontThanhHai; font-size:16px;margin-left:20px">
                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Chọn lọc
                </a>
                <ul class="dropdown-menu" style="border-radius:0;">
                    <li><a class="dropdown-item" href="/Products/index?SortColumn=GiaTang">Từ cao đến thấp</a></li>
                    <li><a class="dropdown-item" href="/Products/index?SortColumn=GiaGiam">Từ thấp đến cao</a></li>


                </ul>
            </div>
        </div>
        <div class="col-sm-10">

            <h3 style="font-family:fontThanhHai; font-size:18px;color:gray;margin-left:20px">Cửa hàng</h3>

            <div class="container text-center mt-4">
                <div class="row row-cols-4">
                    @foreach (var item in Model)
                    {
                        <div class="col" style=" margin-top:20px">
                            <a href="/Products/Detail/@item.idProduct" style="font-size: 12px; font-family: fontThanhHai; text-decoration: none; color:gray">
                                <div class="card" style="width: 13rem; border: none; text-decoration: none; z-index: -100">

                                    <img style="width:100%;height:22vh" src="~/Content/Images/Product/@item.img1Product" class="card-img-top" alt="...">

                                    <div class="card-body" style=" z-index: 100; height:25vh">
                                        <h5 class="card-title">@item.Brand.nameBrand</h5>
                                        <p class="card-text" style="font-size: 15px; font-family: fontThanhHai">@item.nameProduct</p>
                                        <p class="card-text" style="font-size: 18px; font-family: fontThanhHai">@item.priceProduct.ToString("#,##0").Replace(',', '.') VNĐ</p>
                                    </div>
                                </div>
                            </a>

                        </div>
                    }

                </div>
            </div>

            <div colspan="9">
                <ul class="pagination justify-content-center " style="margin-left:10vh; margin-top:8vh">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    @for (int i = 0; i < ViewBag.noOfPages; i++)
                    {
                        <li class="page-item"><a class="page-link" href="/products/index?page=@(i+1)">@(i+1)</a></li>
                    }
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
