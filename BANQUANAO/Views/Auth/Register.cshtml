@model BANQUANAO.Models.Users

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/Main.cshtml";
}
<form action="/Auth/Register" method="post">
    <div class="container text-center" style="height:70vh;margin-top:20vh" id='errorText'>
        <h3 class="text-center" style="margin-top:20vh">Đăng ký tải khoản</h3>
        <div class="row">
            <div class="col-6">
                <p style="font-family:fontThanhHai; font-size:19px">Họ và tên</p>
                <input type="text" placeholder="Nhập họ và tên..." id="FullName" name="FullName" style="width:50vh;padding:9px; border-radius:10px;border:1px solid gray" />
                @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "badge badge-danger" })

            </div>
            <div class="col-6">
                <p style="font-family:fontThanhHai; font-size:19px">Email</p>
                <input type="text" placeholder="Nhập email..." id="Email" name="Email" style="width: 50vh; padding: 9px; border-radius: 10px; border: 1px solid gray" />
                <p style="color: red">@ViewBag.error</p>
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "badge badge-danger" })


            </div>
        </div>
        <div class="row mt-3">
            <div class="col-6">
                <p style="font-family:fontThanhHai; font-size:19px">Tài khoản</p>
                <input type="text" placeholder="Nhập tài khoản..." id="UserName" name="UserName" style="width: 50vh; padding: 9px; border-radius: 10px; border: 1px solid gray" />
                <p style="color: red">@ViewBag.checkTaiKhoan</p>

            </div>
            <div class="col-6">
                <p style="font-family:fontThanhHai; font-size:19px">Mật khẩu</p>
                <input type="password" placeholder="Nhập mật khẩu..." id="Password" name="Password" style="width: 50vh; padding: 9px; border-radius: 10px; border: 1px solid gray" />
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-6">
                <p style="font-family:fontThanhHai; font-size:19px">Địa chỉ</p>
                <input type="text" placeholder="Nhập địa chỉ..." id="Andreas" name="Andreas" style="width: 50vh; padding: 9px; border-radius: 10px; border: 1px solid gray" />
            </div>
        </div>

        @{ 
            string Avatar = "avata-df.png";

        }

        <input type="hidden" value="@Avatar" id="Avatar" name="Avatar" class="form-control form-control-lg" style="border:1px solid gray" />

        <button type="submit" class="btn" style="margin-top:5vh;border-radius: 0; background-color: #333333;color:white;width:40vh;padding:10px">Đăng ký</button>
        <button type="button" class="btn" style="margin-top: 5vh; border-radius: 0; background-color: #333333; color: white; width: 40vh; padding: 10px">
            <a style="text-decoration: none; color: white" href="~/Auth/Login">Đăng nhập</a>
        </button>
    </div>
</form>

<script>


