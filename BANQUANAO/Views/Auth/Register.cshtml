@model BANQUANAO.Models.Users

@{
    ViewBag.Title = "Đăng ký tài khoản";
    Layout = "~/Views/Shared/Main.cshtml";
}
<form action="/Auth/Register" method="post">
    <div class="container py-5 h-100" style="height:70vh;margin-top:20vh" id='errorText'>
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Đăng ký tài khoản</h3>

                            <div class="row">
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <label class="form-label" for="firstName">Họ và tên</label>
                                        <input type="text" placeholder="Nhập họ và tên..." id="FullName" name="FullName" class="form-control form-control-lg" />
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <label class="form-label" for="lastName">Email</label>
                                        <input type="text" placeholder="Nhập email..." id="Email" name="Email" class="form-control form-control-lg" />
                                        @{
                                            if (ViewBag.error != null)
                                            {
                                                <div class="alert-danger" role="alert">
                                                    @ViewBag.error
                                                </div>
                                            }
                                        }
                                    </div>

                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4 d-flex align-items-center">

                                    <div class="form-outline datepicker w-100">
                                        <label for="birthdayDate" class="form-label">Địa chỉ</label>
                                        <input type="text" placeholder="Nhập địa chỉ..." id="Andreas" name="Andreas" class="form-control form-control-lg" />

                                    </div>

                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="col-md-6 mb-4">

                                      

                                    </div>

                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4 pb-2">

                                    <div class="form-outline">
                                        <label class="form-label" for="emailAddress">Tài khoản</label>
                                        <input type="text" placeholder="Nhập tài khoản..." id="UserName" name="UserName" class="form-control form-control-lg" />
                                        @{
                                            if (ViewBag.checkTaiKhoan != null)
                                            {
                                                <div class="alert-danger" role="alert">
                                                    @ViewBag.checkTaiKhoan
                                                </div>
                                            }
                                        }


                                    </div>

                                </div>
                                <div class="col-md-6 mb-4 pb-2">

                                    <div class="form-outline">
                                        <label class="form-label" for="phoneNumber">Mật khu</label>
                                        <input type="password" placeholder="Nhập mật khẩu..." id="Password" name="Password" class="form-control form-control-lg" />

                                    </div>

                                </div>
                            </div>

                         

                            <div class="mt-4 pt-2">
                                <input class="btn btn-primary btn-lg" type="submit" value="Đăng ký tài khoản" />
                                @{
                                    string Avatar = "avata-df.png";

                                }

                                <input type="hidden" value="@Avatar" id="Avatar" name="Avatar" class="form-control form-control-lg" style="border:1px solid gray" />

                                <button type="button" class="btn btn-primary btn-lg" >
                                    <a style="text-decoration: none; color: white" href="~/Auth/Login">Đăng nhập</a>
                                </button>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<script>


</script>

