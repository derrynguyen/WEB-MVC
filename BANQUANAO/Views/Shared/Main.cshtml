                            <h6 class="text-uppercase fw-bold mb-4">Contact</h6>
                            <p><i class="fas fa-home me-3 text-secondary"></i> Sài gòn , Chợ lớn , HCM</p>
                            <p>
                                <i class="fas fa-envelope me-3 text-secondary"></i>
                                amiri@gmail.com
                            </p>
                            <p><i class="fas fa-phone me-3 text-secondary"></i> +84 090565774</p>
                        </div>
                        <!-- Grid column -->
                    </div>
                    <!-- Grid row -->
                </div>
            </section>
            <!-- Section: Links  -->
            <!-- Copyright -->
            <div class="text-center p-4" style="background-color: rgba(0, 0, 0, 0.025);">
                © 2022 Copyright:
                <a class="text-reset fw-bold" href="https://mdbootstrap.com/">AMIRI.COM</a>
            </div>
            <!-- Copyright -->
        </footer>
        <!-- Footer -->
    </div>


</body>
</html>
