@model BANQUANAO.Models.Order

@{
    ViewBag.Title = "Xóa đơn hàng";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div style="width:100%;height:100vh">
    <div class="container mt-5 mb-10">
        <h3>Xóa đơn hàng</h3>
        <form action="/admin/xoaDonHang/@Model.OrderID" method="post" enctype="multipart/form-data">
            <input type="hidden" id="OrderID" name="OrderID" class="form-control" value="@Model.OrderID" />
            <input type="hidden" id="FullName" name="FullName" class="form-control" value="@Model.Users.FullName" />
            <h1>Bạn có đồng ý xóa đơn hàng cùa <span style="color:green"> @Model.Users.FullName</span></h1>

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-block mb-4">Xóa đơn hàng</button>
        </form>
    </div>
</div>

