@model List<BANQUANAO.Models.Products>

@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/Main.cshtml";
}



<div class="container text-center mt-3" style="margin-bottom:20vh">
    <div>
        <div class="container text-center" style="margin-top:10px">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4">
                <video autoplay="" allow="autoplay" loop="" muted="muted" playsinline="" style="width: 100%"><source src="https://thombrownevn.com/wp-content/uploads/2020/06/1813487637.mp4"></video>

            </div>
        </div>
    </div>

    <h2 style="font-family:fontThanhHai; color:gray;font-size:35px;margin-top:60px">Sản phẩm đánh giá cao</h2>
    <div class="container text-center mt-4">
        <div class="row row-cols-4" style="margin-left:30px">
            @foreach (var item in Model)
            {
                <div class="col" style=" margin-top:20px">
                    <a href="/Products/Detail/@item.idProduct" style="font-size: 12px; font-family: fontThanhHai; text-decoration: none; color:gray">
                        <div class="card" style="width: 13rem; border: none; text-decoration: none; z-index: -100">

                            <img style="width:100%;" src="~/Content/Images/Product/@item.img1Product" class="card-img-top" alt="...">

                            <div class="card-body" style=" z-index: 100; height: 25vh">
                                <h5 class="card-title">@item.Brand.nameBrand</h5>
                                <p class="card-text" style="font-size: 15px; font-family: fontThanhHai">@item.nameProduct</p>
                                <p class="card-text" style="font-size: 18px; font-family: fontThanhHai">@item.priceProduct.ToString("C")</p>
                            </div>
                        </div>
                    </a>

                </div>
            }

        </div>
    </div>

    <div id="carouselExampleCaptions" class="carousel slide mt-5" data-bs-ride="true">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img style="width:100%;height:50vh" src="https://image-cdn.hypb.st/https%3A%2F%2Fhypebeast.com%2Fimage%2F2018%2F06%2Ftw-hb-mag-22-banner.jpg?w=960&cbr=1&q=90&fit=max" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5>AMIRI STORE</h5>
                    <p>Uy tin - Chất lượng</p>
                </div>
            </div>
            <div class="carousel-item">
                <img style="width:100%;height:50vh" src="https://kenh14cdn.com/thumb_w/660/2017/a2-1504462828016.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Thời trang đa dạng</h5>
                    <p>Luôn cập nhật xu hướng nhanh</p>
                </div>
            </div>
            <div class="carousel-item">
                <img style="width:100%;height:50vh" src="https://www.theyoungfolks.com/wp-content/uploads/2020/07/pop-smoke-aim-for-the-moon-1-570x300.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Chất lượng</h5>
                    <p>Giá cả phải chăng chất lượng tốt.</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>


</div>
