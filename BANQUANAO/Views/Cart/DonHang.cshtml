@model List<BANQUANAO.Models.Order>

@{
    ViewBag.Title = "DonHang";
    Layout = "~/Views/Shared/Main.cshtml";
}


<div class="container" style="margin-bottom:5vh;margin-top:25vh ; height:60vh">
    <table class="table align-middle mb-0 bg-white">
        <thead class="bg-light">
            <tr>
                <th>Người mua</th>
                <th>Mã đơn</th>
                <th>Trạng thái giao hàng</th>
                <th>Trạng thái thanh toán</th>
                <th>Trạng thái xác nhận</th>
                <th>Tổng đơn giá</th>
                <th>Chi tiết</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                int idUser = Convert.ToInt32(Session["idUser"]);
                if (idUser == item.CustomerID)
                {

                  string FullName = Session["FullName"].ToString();
                   
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">

                                <div class="ms-3">
                                    <p class="fw-bold mb-1">@FullName</p>
                                </div>
                            </div>
                        </td>
                        <td>
                            <p class="fw-normal mb-1">@item.OrderID</p>
                        </td>
                        <td>
                            <span class="badge badge-success rounded-pill d-inline">@item.StatusShip</span>
                        </td>
                        <td>
                            <span class="badge badge-success rounded-pill d-inline">@item.StatusShip</span>
                        </td>
                        <td>
                            <span class="badge badge-success rounded-pill d-inline">@item.StatusOrder</span>
                        </td>
                        <td>
                            <p class="fw-normal mb-1">@item.PriceSum VNĐ</p>
                        </td>
                        <td>
                            <p class="fw-normal mb-1">
                                <a href="~/Cart/DetailBill">Chi tiết</a>
                            </p>
                        </td>
                    </tr>

                }

            }

        </tbody>
    </table>
</div>

